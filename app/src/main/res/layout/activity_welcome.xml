<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.welcome.WelcomeActivity"
    android:background="#aec737">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:background="#d7eff1"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="247dp"
        android:src="@drawable/welcome"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:layout_marginTop="277dp"
        android:textSize="20dp"
        android:textStyle="normal"
        android:text="Nie możemy się doczekać. żeby wesprzeć Cię w uprawie ogródka. Wystarczy, że wskażesz, które z roślin pragniesz uprawiać, a my zajmiemy się całą resztą. \nUdanej zabawy!"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/welcomeActivityConfirmButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:background="#3f8c28"
        android:textColor="#FFFFFF"
        android:text="Rozumiem"/>

</RelativeLayout>
